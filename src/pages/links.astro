---
import Computer from 'components/icons/Computer.astro'
import Farcaster from 'components/icons/Farcaster.astro'
import Github from 'components/icons/Github.astro'
import Instagram from 'components/icons/Instagram.astro'
import Twitter from 'components/icons/Twitter.astro'
import ProfileImage from 'components/ProfileImage.astro'
import ThemeToggle from 'components/ThemeToggle.astro'
import Document from 'layouts/Document.astro'
import {
  FARCASTER_LINK,
  GITHUB_LINK,
  INSTAGRAM_LINK,
  NAME,
  TWITTER_LINK,
} from '../constants'
---

<Document title="Links">
  <div class="container">
    <div class="theme">
      <ThemeToggle />
    </div>
    <div class="name">{NAME}</div>
    <div class="image">
      <ProfileImage />
    </div>
    <ul>
      <li>
        <a href="/">
          <span>Website</span>
          <Computer />
        </a>
      </li>
      <li>
        <a href={INSTAGRAM_LINK}>
          <span>Instagram</span>
          <Instagram />
        </a>
      </li>
      <li>
        <a href={FARCASTER_LINK}>
          <span>Farcaster</span>
          <Farcaster />
        </a>
      </li>
      <li>
        <a href={GITHUB_LINK}>
          <span>Github</span>
          <Github />
        </a>
      </li>
      <li>
        <a href={TWITTER_LINK}>
          <span>Twitter</span>
          <Twitter />
        </a>
      </li>
    </ul>
  </div>
</Document>

<style>
  .container {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 500px;
    min-height: 100vh;
    padding: var(--s-xl);
    margin: 0 auto;
  }

  .theme {
    display: flex;
    justify-content: end;
  }

  .name {
    margin: 0 auto;
    font-size: var(--fs-xl);
    font-weight: bold;
  }

  .image {
    margin: var(--s-lg) auto;
  }

  ul {
    padding: 0;
    margin: 0;
    list-style: none;
  }

  a {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--s-lg) 0;
    color: var(--c-text);
    text-decoration: none;
    border-bottom: 1px solid var(--c-border);
  }

  span {
    text-transform: uppercase;
  }

  svg {
    height: 1.5rem;
  }
</style>
