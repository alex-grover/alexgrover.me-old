---
import Navigation from 'components/Navigation.astro'
import ThemeToggle from 'components/ThemeToggle.astro'
import { NAME } from '../constants'
---

<header>
  <a href="/" data-testid="brand">{NAME}</a>
  <div>
    <Navigation />
    <ThemeToggle />
  </div>
</header>

<style>
  header {
    position: relative;
    display: flex;
    justify-content: space-between;
    padding: var(--s-md) 0;
  }

  div {
    display: flex;
    align-items: center;
  }

  a {
    font-size: var(--fs-lg);
    font-weight: bold;
    color: inherit;
    text-decoration: none;
  }

  @media (--tablet-landscape-up) {
    header {
      padding: var(--s-lg) 0;
    }
  }
</style>
