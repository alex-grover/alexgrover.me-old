---
import Icon from 'astro-icon'
import Button from 'components/Button.astro'
import {
  FOUNDATION_USERNAME,
  GITHUB_USERNAME,
  INSTAGRAM_USERNAME,
  READ_CV_USERNAME,
  TWITTER_USERNAME,
} from '../constants'
---

<nav>
  <Button type="button" class="open" aria-label="open menu" data-nav-toggle>
    <Icon name="heroicons-outline:menu" />
  </Button>

  <div data-nav-menu>
    <ul>
      <li>
        <a href={`https://read.cv/${READ_CV_USERNAME}`}>Work</a>
      </li>
      <li>
        <a href={`https://foundation.app/${FOUNDATION_USERNAME}`}>
          <span>Foundation&nbsp;</span>
          <span class="show">NFTs</span>
        </a>
      </li>
      <li>
        <a href={`https://www.instagram.com/${INSTAGRAM_USERNAME}/`}>
          <Icon name="mdi:instagram" />
          <span>Instagram</span>
        </a>
      </li>
      <li>
        <a href={`https://twitter.com/${TWITTER_USERNAME}`}>
          <Icon name="mdi:twitter" />
          <span>Twitter</span>
        </a>
      </li>
      <li>
        <a href={`https://github.com/${GITHUB_USERNAME}`}>
          <Icon name="mdi:github" />
          <span>GitHub</span>
        </a>
      </li>
    </ul>
    <Button type="button" aria-label="close menu" data-nav-toggle>
      <Icon name="heroicons-outline:x" />
    </Button>
  </div>
</nav>

<script is:inline>
  function toggleNav(event) {
    event.stopPropagation()
    document.querySelector('[data-nav-menu]')?.classList.toggle('visible')
  }

  document.querySelectorAll('[data-nav-toggle]').forEach((element) => {
    element.addEventListener('click', toggleNav)
  })

  window.addEventListener('click', (event) => {
    const menu = document.querySelector('[data-nav-menu]')
    if (menu && !menu.contains(event.target)) {
      menu.classList.remove('visible')
    }
  })
</script>

<style>
  svg {
    height: var(--fs-md);
    color: var(--c-text);
  }

  div {
    position: absolute;
    top: var(--spacing-md);
    right: 0;
    left: 0;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: var(--spacing-md);
    pointer-events: none;
    background: var(--c-bg);
    border-radius: var(--r);
    box-shadow: var(--shadow);
    opacity: 0;
    transition-timing-function: var(--t-timing);
    transition-duration: var(--t-duration);
    transition-property: transform, opacity;
    transform: scale(0.8);
    transform-origin: top right;
  }

  .visible {
    pointer-events: unset;
    opacity: 1;
    transform: scale(1);
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    justify-content: space-between;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  li {
    display: flex;
    flex-grow: 1;
    align-items: end;
  }

  a {
    display: flex;
    align-items: center;
    line-height: 1;
    color: var(--c-text);
    text-decoration: none;
  }

  li svg {
    display: none;
  }

  .open {
    margin-right: var(--spacing-lg);
  }

  @media (--tablet-portrait-up) {
    div {
      left: unset;
      width: 300px;
      box-shadow: unset;
    }
  }

  @media (--tablet-landscape-up) {
    div {
      position: unset;
      width: unset;
      padding: unset;
      pointer-events: unset;
      background-color: unset;
      opacity: unset;
      transform: unset;
    }

    ul {
      flex-direction: row;
      gap: var(--spacing-xl);
      margin-right: var(--spacing-xl);
    }

    li svg {
      display: block;
    }

    span:not(.show) {
      display: none;
    }

    [data-nav-toggle] {
      display: none;
    }
  }
</style>
