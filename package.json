{
  "name": "alexgrover.me",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "start": "astro preview",
    "check": "npm-run-all --parallel check:*",
    "check:code": "astro check",
    "check:format": "prettier --check --cache --ignore-path .gitignore .",
    "check:styles": "stylelint --formatter verbose --cache --cache-location cache/ --ignore-path .gitignore **/*.{astro,css}",
    "check:types": "tsc",
    "fix": "npm-run-all --sequential fix:styles fix:format",
    "fix:format": "prettier --write --cache --ignore-path .gitignore .",
    "fix:styles": "stylelint --fix --formatter verbose --cache --cache-location cache/ --ignore-path .gitignore **/*.{astro,css}",
    "test": "playwright test",
    "test:install": "playwright install --with-deps",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.1",
    "@astrojs/sitemap": "^3.1.4",
    "@astrojs/vercel": "^7.6.0",
    "astro": "^4.8.6",
    "astro-compressor": "^0.4.1",
    "astro-seo": "^0.8.3",
    "astro-themes": "^0.2.5",
    "markdown-it": "^14.1.0",
    "sanitize-html": "^2.13.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.7.0",
    "@csstools/postcss-global-data": "^2.1.1",
    "@playwright/test": "^1.44.0",
    "@types/markdown-it": "^14.1.1",
    "@types/sanitize-html": "^2.11.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-custom-media": "^10.0.6",
    "postcss-html": "^1.7.0",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "stylelint": "^16.5.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.4.5"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro"
    ],
    "semi": false,
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules",
      "stylelint-config-recess-order",
      "stylelint-config-html"
    ]
  },
  "lint-staged": {
    "*.{astro,css}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "!*.{astro,css}": "prettier --write --ignore-unknown"
  }
}
